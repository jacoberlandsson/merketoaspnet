@using merketoaspnet.Models.Dtos;

@model Product


<div class="container">
    <div class="product-details-container">
       
        <img class="product-details-img" src="../images/placeholders/270x295.svg" alt="">
        <div class="product-details-wrapper">
            <div class="product-details-details">@Model.VendorName @Model.ProductName</div>

            <div class="product-details-details">@Model.Ingress</div>

            <div class="product-details-details">@Model.Description</div>
            <div class="product-details-details">Price: @Model.Price SEK</div>
           
        </div>

    </div>
</div>